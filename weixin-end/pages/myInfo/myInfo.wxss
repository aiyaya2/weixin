/* pages/myInfo/myInfo.wxss */
page{
  background: #ECECEC;
}
.container{
  font-size: 35rpx;
  width: 750rpx;
}
.header{
  margin-top: 100rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header .userImg{
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid gainsboro;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.content {
  margin-top: 60rpx;
}
.tel{
  width: 750rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 15rpx; 
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-bottom: 40rpx;
}
.btn {
  width: 95%;
  text-align: center;
  line-height: 100rpx;
  color: black;
  font-size: 35rpx;
  background: #FFD161;
  margin: 15rpx auto;
}
.btnConfirm {
  width: 540rpx;
  text-align: center;
  color: black;
  font-size: 35rpx;
  background: #FFD161;
  margin-top: 30rpx;
  
}
.password-item{
    width: 100%;
    margin-top: 200rpx;
    flex-grow:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.item-info{
    font-size: 15px;
    color: #888;
    padding-bottom: 40rpx;
    text-align: center;
    justify-content: center;
    align-items: center;
}

.pwd{
  width: 560rpx;
  margin-bottom: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-grow: 1;
    border-bottom: 1px solid gainsboro;
}

.pwd text{
    height: 100%;
    font-size: 14px;
    color: #888;
    display: flex;

}
.login-btn{
    width: 80%;
    color: white;
    background-color: green;
    border-radius: 0;
    font-size: 14px;
}

.login-btn:hover{
    width: 80%;
    color: white;
    border-radius: 0;
}
.layer {
  position: absolute;
  height: 0;
  width: 100%;
  overflow: hidden;
}